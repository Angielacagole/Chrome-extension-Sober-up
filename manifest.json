{
  "manifest_version": 3,
  "name": "Trigger Extension",
  "version": "1.0.0",
  "description": "Extension de navigateur pour trigger des mots cl√©s",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}